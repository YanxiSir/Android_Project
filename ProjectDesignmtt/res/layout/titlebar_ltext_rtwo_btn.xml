<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/login_button_default"
    android:orientation="horizontal" >

    <RelativeLayout
        android:id="@+id/title_tbb_left_rel"
        android:layout_width="@dimen/titlebar_height"
        android:layout_height="match_parent"
        android:background="@drawable/titlebtn_bg"
        android:clickable="true"
        android:visibility="gone" >

        <ImageView
            android:id="@+id/title_tbb_left_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/back"
            android:contentDescription="@string/contentDescribe" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/title_tbb_left_ll"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/title_tbb_left_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="SunCampus"
            android:textColor="@color/titlebar_text"
            android:textSize="@dimen/titlebar_title_size" />
    </LinearLayout>

    <View
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1" />

    <RelativeLayout
        android:id="@+id/title_tbb_right_rel_one"
        android:layout_width="@dimen/titlebar_height"
        android:layout_height="match_parent"
        android:background="@drawable/titlebtn_bg"
        android:clickable="true"
        android:visibility="gone" >

        <ImageView
            android:id="@+id/title_tbb_right_image_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:contentDescription="@string/contentDescribe" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/title_tbb_right_rel_two"
        android:layout_width="@dimen/titlebar_height"
        android:layout_height="match_parent"
        android:background="@drawable/titlebtn_bg"
        android:clickable="true" >

        <ImageView
            android:id="@+id/title_tbb_right_image_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:contentDescription="@string/contentDescribe"
            android:src="@drawable/search" />
    </RelativeLayout>

</LinearLayout>