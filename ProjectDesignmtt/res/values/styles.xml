<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
     <style name="CustomWindowTitleBackground">
        <item name="android:background">@color/titlebar_bg</item>
    </style>
    
     <style name="CustomTitleBar" parent="android:Theme">
        <item name="android:windowTitleSize">@dimen/titlebar_height</item>
        <item name="android:windowTitleBackgroundStyle">@style/CustomWindowTitleBackground</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:activityOpenEnterAnimation">@null</item>
        <item name="android:activityOpenExitAnimation">@null</item>
        <item name="android:activityCloseEnterAnimation">@null</item>
        <item name="android:activityCloseExitAnimation">@null</item>
        <item name="android:taskOpenEnterAnimation">@null</item>
        <item name="android:taskOpenExitAnimation">@null</item>
        <item name="android:taskCloseEnterAnimation">@null</item>
        <item name="android:taskCloseExitAnimation">@null</item>
        <item name="android:taskToFrontEnterAnimation">@null</item>
        <item name="android:taskToFrontExitAnimation">@null</item>
        <item name="android:taskToBackEnterAnimation">@null</item>
        <item name="android:taskToBackExitAnimation">@null</item>
    </style>
    
     <style name="SelectMenuStyle">
         <item name="android:drawableRight">@drawable/select_menu</item>
         <item name="android:background">@drawable/line_bg</item>
         <item name="android:gravity">center</item>
         <item name="android:textSize">@dimen/fra1_select_text_size</item>
     </style>

      <style name="loading_dialog" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
    
      <style name="EditTextStyle">
          <item name="android:background">@drawable/edittext_focus_or_no</item>
          <item name="android:padding">10dp</item>
          <item name="android:textColor">@color/black</item>
          <item name="android:textSize">16sp</item>
      </style>
      <style name="PadingTenOrTweenty">
          <item name="android:paddingLeft">14dp</item>
          <item name="android:paddingRight">14dp</item>
          <item name="android:paddingTop">8dp</item>
          <item name="android:paddingBottom">8dp</item>
          <item name="android:background">@color/white</item>
      </style>
      <style name="SubmitOrderPadding">
           <item name="android:paddingLeft">14dp</item>
          <item name="android:paddingRight">14dp</item>
          <item name="android:paddingTop">12dp</item>
          <item name="android:paddingBottom">12dp</item>
          <item name="android:background">@drawable/line_bg</item>
          <item name="android:clickable">true</item>
      </style>
</resources>
