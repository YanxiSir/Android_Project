<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        
    </style>
    
    <style name="CustomWindowTitleBackground">
        <item name="android:background">@color/titlebar_bg</item>
    </style>
    
     <style name="CustomTitleBar" parent="android:Theme">
        <item name="android:windowTitleSize">@dimen/titlebar_height</item>
        <item name="android:windowTitleBackgroundStyle">@style/CustomWindowTitleBackground</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:activityOpenEnterAnimation">@null</item>
        <item name="android:activityOpenExitAnimation">@null</item>
        <item name="android:activityCloseEnterAnimation">@null</item>
        <item name="android:activityCloseExitAnimation">@null</item>
        <item name="android:taskOpenEnterAnimation">@null</item>
        <item name="android:taskOpenExitAnimation">@null</item>
        <item name="android:taskCloseEnterAnimation">@null</item>
        <item name="android:taskCloseExitAnimation">@null</item>
        <item name="android:taskToFrontEnterAnimation">@null</item>
        <item name="android:taskToFrontExitAnimation">@null</item>
        <item name="android:taskToBackEnterAnimation">@null</item>
        <item name="android:taskToBackExitAnimation">@null</item>
    </style>

    <style name="shadow_style">
        <item name="android:shadowColor">@color/shadow_color</item>
        <item name="android:shadowRadius">10</item>
        <item name="android:shadowDx">5</item>
        <item name="android:shadowDy">5</item>
    </style>

    <style name="loading_dialog" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
    
    
	<style name="BoyRadioBtn">
        <item name="android:button">@null</item>
        <item name="android:drawableLeft">@drawable/boy_selector</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@null</item>
    </style>
    <style name="GirlRadioBtn">
        <item name="android:button">@null</item>
        <item name="android:drawableLeft">@drawable/girl_selector</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@null</item>
    </style>
    <style name="SelfInfoLineStyle">
        <item name="android:clickable">true</item>
        <item name="android:background">@drawable/line_bg</item>
        <item name="android:paddingLeft">@dimen/padding_edge_low</item>
        <item name="android:paddingRight">@dimen/padding_edge_low</item>
        <item name="android:paddingTop">@dimen/padding_edge_normal</item>
        <item name="android:paddingBottom">@dimen/padding_edge_normal</item>
    </style>
    
     <style name="paddingTenTweenStype">
        <item name="android:paddingLeft">@dimen/padding_edge_large</item>
        <item name="android:paddingRight">@dimen/padding_edge_large</item>
        <item name="android:paddingTop">@dimen/padding_edge_low</item>
        <item name="android:paddingBottom">@dimen/padding_edge_low</item>
    </style>
    <style name="questionClickBackStyle">
        <item name="android:clickable">true</item>
        <item name="android:background">@drawable/question_bg</item>
    </style>
    
</resources>