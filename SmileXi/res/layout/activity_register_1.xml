<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_bg"
    android:orientation="vertical" >
    
    <LinearLayout
        android:layout_marginTop="100dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/login_light_gray"
            android:orientation="horizontal" >
        </LinearLayout>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/login_text_back"
            android:paddingLeft="@dimen/padding_edge_normal"
            android:paddingRight="@dimen/padding_edge_normal" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/padding_edge_normal"
                android:paddingBottom="@dimen/padding_edge_normal">
                <EditText 
                    android:id="@+id/reg_phone_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/label_16dp"
                    android:paddingLeft="@dimen/padding_edge_normal"
                    android:background="@null"
                    android:inputType="phone"
                    android:hint="请输入手机号"
                    android:layout_centerVertical="true"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/login_deep_gray" >
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <EditText
                    android:id="@+id/reg_code_text"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:paddingLeft="@dimen/padding_edge_normal"
                    android:textSize="@dimen/label_16dp"
                    android:background="@null"
                    android:inputType="number"
                    android:hint="请输入验证码"
                    android:layout_centerVertical="true"/>
                <TextView 
                    android:id="@+id/reg_code_button"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:text="获取验证码"
                    android:gravity="center"
                    android:clickable="true"
                    android:textColor="@color/white"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/main_no_corner_button"
                    />
            </RelativeLayout>
            
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/login_deep_gray" >
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/padding_edge_normal"
                android:paddingBottom="@dimen/padding_edge_normal">
                <EditText
                    android:id="@+id/reg_password_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/padding_edge_normal"
                    android:textSize="@dimen/label_16dp"
                    android:background="@null"
                    android:inputType="textPassword"
                    android:hint="请输入密码"
                    android:layout_centerVertical="true"/>
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/login_light_gray"
            android:orientation="horizontal" >
        </LinearLayout>
        
        <TextView 
            android:id="@+id/registerButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="20dp"
            android:padding="@dimen/padding_edge_normal"
            android:text="注册"
            android:gravity="center"
            android:clickable="true"
            android:background="@drawable/login_button"
            android:textSize="@dimen/label_16dp"
            android:textColor="@color/white"
            />

</LinearLayout>
