<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="@color/titlebar_bg" >

    <RelativeLayout
        android:id="@+id/titlebar_ltcerb_left_rel"
        android:layout_width="@dimen/titlebar_height"
        android:layout_height="match_parent"
        android:background="@drawable/titlebtn_bg"
        android:clickable="true" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/back" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/titlebar_ltcerb__text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="个人信息"
            android:textColor="@color/titlebar_text"
            android:textSize="@dimen/titlebar_title_size" />

        <LinearLayout
            android:id="@+id/titlebar_ltcerb_search_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@drawable/edittext_focus_or_no"
            android:orientation="horizontal"
            android:padding="6dp"
            android:visibility="gone" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@drawable/search_green" />

            <EditText
                android:id="@+id/titlebar_ltcerb_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@null"
                android:hint="用户名/手机号"
                android:textColor="@color/black"
                android:textSize="16sp" />
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/titlebar_ltcerb_right_rel"
        android:layout_width="@dimen/titlebar_height"
        android:layout_height="match_parent"
        android:layout_marginLeft="4dp"
        android:background="@drawable/titlebtn_bg"
        android:clickable="true" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="搜索"
            android:textColor="@color/white"
            android:textSize="16sp" />
    </RelativeLayout>

</LinearLayout>