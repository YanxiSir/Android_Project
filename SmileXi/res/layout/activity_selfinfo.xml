<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_bg_gray"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@color/white"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/self_head_rel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/line_bg"
            android:clickable="true"
            android:padding="@dimen/padding_edge_low" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:paddingLeft="@dimen/padding_edge_low"
                android:text="头像"
                android:textColor="@color/line_left_color"
                android:textSize="@dimen/line_left_size" />

            <ImageView
                android:id="@+id/self_head_image"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:contentDescription="@string/contentDescribe"
                android:src="@drawable/defaultheader" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="@dimen/padding_edge_low"
            android:layout_marginRight="@dimen/padding_edge_low"
            android:background="@color/main_bg_gray" />

        <RelativeLayout
            android:id="@+id/self_nick_rel"
            style="@style/SelfInfoLineStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:paddingLeft="@dimen/padding_edge_low"
                android:text="昵称"
                android:textColor="@color/line_left_color"
                android:textSize="@dimen/line_left_size" />

            <TextView
                android:id="@+id/self_nick_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:paddingRight="@dimen/padding_edge_low"
                android:text=""
                android:textColor="@color/line_right_color"
                android:textSize="@dimen/line_left_size" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="@dimen/padding_edge_low"
            android:layout_marginRight="@dimen/padding_edge_low"
            android:background="@color/main_bg_gray" />

        <RelativeLayout
            android:id="@+id/self_phone_rel"
            style="@style/SelfInfoLineStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:paddingLeft="@dimen/padding_edge_low"
                android:text="手机号"
                android:textColor="@color/line_left_color"
                android:textSize="@dimen/line_left_size" />

            <TextView
                android:id="@+id/self_phone_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:ellipsize="end"
                android:paddingRight="@dimen/padding_edge_low"
                android:singleLine="true"
                android:text=""
                android:textColor="@color/line_right_color"
                android:textSize="@dimen/line_left_size" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="@dimen/padding_edge_low"
            android:layout_marginRight="@dimen/padding_edge_low"
            android:background="@color/main_bg_gray" />

        <RelativeLayout
            android:id="@+id/self_sex_rel"
            style="@style/SelfInfoLineStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:paddingLeft="@dimen/padding_edge_low"
                android:text="性别"
                android:textColor="@color/line_left_color"
                android:textSize="@dimen/line_left_size" />

            <TextView
                android:id="@+id/self_sex_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:ellipsize="end"
                android:maxWidth="100dp"
                android:paddingRight="@dimen/padding_edge_low"
                android:singleLine="true"
                android:text=""
                android:textColor="@color/line_right_color"
                android:textSize="@dimen/line_left_size" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="@dimen/padding_edge_low"
            android:layout_marginRight="@dimen/padding_edge_low"
            android:background="@color/main_bg_gray" />

        <RelativeLayout
            android:id="@+id/self_sign_rel"
            style="@style/SelfInfoLineStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:paddingLeft="@dimen/padding_edge_low"
                android:text="个性签名"
                android:textColor="@color/line_left_color"
                android:textSize="@dimen/line_left_size" />

            <TextView
                android:id="@+id/self_sign_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:ellipsize="end"
                android:maxWidth="100dp"
                android:paddingRight="@dimen/padding_edge_low"
                android:singleLine="true"
                android:text=""
                android:textColor="@color/line_right_color"
                android:textSize="@dimen/line_left_size" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>