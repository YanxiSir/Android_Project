<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >
    
    <RelativeLayout 
        android:id="@+id/title_tbb_left_rel"
        android:visibility="gone"
        android:clickable="true"
        android:background="@drawable/titlebtn_bg"
        android:layout_width="@dimen/titlebar_height"
        android:layout_height="match_parent">
        <ImageView 
            android:id="@+id/title_tbb_left_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/contentDescribe"
            android:layout_centerInParent="true"/>
    </RelativeLayout>
    <LinearLayout 
        android:id="@+id/title_tbb_left_ll"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">
        <com.smilexi.sx.widget.RoundImageView
            android:id="@+id/title_tbb_textimage"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:scaleType="centerCrop"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/defaultheader"/>
        <TextView 
            android:id="@+id/title_tbb_left_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SunCampus"
            android:layout_gravity="center_vertical"
            android:textColor="@color/titlebar_text"
            android:textSize="@dimen/titlebar_title_size"/>
    </LinearLayout>
    <View 
        android:layout_height="match_parent"
        android:layout_width="0dp"
        android:layout_weight="1"/>
    <RelativeLayout 
        android:id="@+id/title_tbb_right_rel_one"
        android:visibility="gone"
        android:clickable="true"
        android:background="@drawable/titlebtn_bg"
        android:layout_width="@dimen/titlebar_height"
        android:layout_height="match_parent">
        <ImageView 
            android:id="@+id/title_tbb_right_image_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/contentDescribe"
            android:layout_centerInParent="true"/>
    </RelativeLayout>
    <RelativeLayout 
        android:id="@+id/title_tbb_right_rel_two"
        android:clickable="true"
        android:background="@drawable/titlebtn_bg"
        android:layout_width="@dimen/titlebar_height"
        android:layout_height="match_parent">
        <ImageView 
            android:id="@+id/title_tbb_right_image_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/more"
            android:contentDescription="@string/contentDescribe"
            android:layout_centerInParent="true"/>
    </RelativeLayout>
    

</LinearLayout>
