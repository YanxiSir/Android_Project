<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_bg_gray"
    android:orientation="vertical" >

    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/fra3_userinfo_rel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/line_bg"
        android:clickable="true"
        android:paddingBottom="@dimen/padding_edge_lower"
        android:paddingLeft="@dimen/padding_edge_normal"
        android:paddingRight="@dimen/padding_edge_normal"
        android:paddingTop="@dimen/padding_edge_lower" >

        <ImageView
            android:id="@+id/fra3_user_image"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerVertical="true"
            android:contentDescription="@string/contentDescribe"
            android:src="@drawable/defaultheader" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/fra3_user_image"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/fra3_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="YanxiSir"
                android:textColor="@color/black"
                android:textSize="@dimen/label_16dp" />

            <TextView
                android:id="@+id/fra3_sign_word"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="莫问来由"
                android:textColor="@color/line_right_color" />
        </LinearLayout>
    </RelativeLayout>

   <!--  <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="20dp" /> -->

    <LinearLayout
        android:id="@+id/fra3_daxuell"
        style="@style/SelfInfoLineStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:src="@drawable/daxue" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:paddingLeft="@dimen/padding_edge_low"
            android:text="大学"
            android:textColor="@color/line_left_color"
            android:textSize="@dimen/line_left_size" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="@dimen/padding_edge_low"
            android:text=""
            android:textColor="@color/line_right_color"
            android:textSize="@dimen/line_left_size" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="20dp" />

    <LinearLayout
        android:id="@+id/fra3_shoucangll"
        style="@style/SelfInfoLineStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:src="@drawable/shoucang_blue" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:paddingLeft="@dimen/padding_edge_low"
            android:text="收藏"
            android:textColor="@color/line_left_color"
            android:textSize="@dimen/line_left_size" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="@dimen/padding_edge_low"
            android:text=""
            android:textColor="@color/line_right_color"
            android:textSize="@dimen/line_left_size" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="20dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/fra3_guanzhull"
            style="@style/SelfInfoLineStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:src="@drawable/guanzhu" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:paddingLeft="@dimen/padding_edge_low"
                android:text="关注"
                android:textColor="@color/line_left_color"
                android:textSize="@dimen/line_left_size" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="@dimen/padding_edge_low"
                android:text=""
                android:textColor="@color/line_right_color"
                android:textSize="@dimen/line_left_size" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="@dimen/padding_edge_low"
            android:layout_marginRight="@dimen/padding_edge_low"
            android:background="@color/main_bg_gray" />

        <LinearLayout
            android:id="@+id/fra3_dongtaill"
            style="@style/SelfInfoLineStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="12dp"
                android:src="@drawable/dongtai" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:paddingLeft="@dimen/padding_edge_low"
                android:text="动态"
                android:textColor="@color/line_left_color"
                android:textSize="@dimen/line_left_size" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="@dimen/padding_edge_low"
                android:text=""
                android:textColor="@color/line_right_color"
                android:textSize="@dimen/line_left_size" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="@dimen/padding_edge_low"
            android:layout_marginRight="@dimen/padding_edge_low"
            android:background="@color/main_bg_gray" />

        <LinearLayout
            android:id="@+id/fra3_questionll"
            style="@style/SelfInfoLineStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="12dp"
                android:src="@drawable/question" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:paddingLeft="@dimen/padding_edge_low"
                android:text="问题"
                android:textColor="@color/line_left_color"
                android:textSize="@dimen/line_left_size" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="@dimen/padding_edge_low"
                android:text=""
                android:textColor="@color/line_right_color"
                android:textSize="@dimen/line_left_size" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="20dp" />

    <LinearLayout
        android:id="@+id/fra3_shezhill"
        style="@style/SelfInfoLineStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:src="@drawable/shezhi" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:paddingLeft="@dimen/padding_edge_low"
            android:text="设置"
            android:textColor="@color/line_left_color"
            android:textSize="@dimen/line_left_size" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="@dimen/padding_edge_low"
            android:text=""
            android:textColor="@color/line_right_color"
            android:textSize="@dimen/line_left_size" />
    </LinearLayout></LinearLayout>

</ScrollView>